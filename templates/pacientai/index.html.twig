{% extends 'base.html.twig' %}

{% block title %}Pacientai index{% endblock %}

{% block body %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <style>

        body {
            background: linear-gradient(0deg, rgba(34,161,241,0.6480742980786064) 0%, rgba(128,236,255,1) 100%) fixed;
            background-size: cover;
            -ms-background-size: cover;
            -o-background-size: cover;
            -moz-background-size: cover;
            -webkit-background-size: cover;
            font-family: "Helvetica Neue", Helvetica, Arial;
            padding-top: 20px;
            background-repeat: no-repeat;
        }
        .mainui {
            margin-right: 10%; margin-left: 10%; margin-bottom: 10px; background-color: white; padding-left: 5px; padding-right: 5px; border-radius: 5px;         box-shadow:
                0px 0px 0px 5px rgba( 255,255,255,0.4 ),
                0px 4px 20px rgba( 0,0,0,0.33 );
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            border-radius: 5px;
        }
        @media (max-width: 1200px) {
            body {
                background-size: auto;
            }

            .mainui{
                margin-right: 3%;
                margin-left: 3%;
            }
        }

        #customers {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 99%;
            margin-left: 1%;
        }

        #customers td, #customers th {
            border: 1px solid rgba(82, 146, 62, 0.84);
            padding: 8px;
        }

        #customers tr:nth-child(even){background-color: rgba(121, 225, 90, 0.33);}

        #customers tr:hover {background-color: rgba(212, 232, 206, 0.75);}

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
    </style>


    <div class="mainui">
        <div class="container-fluid">
            {{ include('virsus.html.twig') }}
            <br>
            <div class="row">
                <div class="col-md-12">
                    <div style="background-color: #f8f9fa; padding: 1% 1% 1% 1%">
                        {% if app.user.kalba == "EN" %}
                            <h1>Patient management</h1>
                        {% else %}
                            <h1>Pacientų valdymas</h1>
                        {% endif %}
                        <br>
                        <div style="margin-left: 1%">
                            {% if app.user.kalba == "EN" %}
                                Search:
                            {% else %}
                                Paieška:
                            {% endif %}
                            <input id="myInput" type="text" placeholder="Search..">
                        </div>
                        <br>
                        {% if app.user.kalba == "EN" %}
                            <h2>New patients:</h2>
                        {% else %}
                            <h2>Nauji pacientai:</h2>
                        {% endif %}

                        <table class="table" id="customers">
                            <thead>
                            <tr>
                                <th>
                                    {% if app.user.kalba == "EN" %}
                                        Treatment
                                    {% else %}
                                        Gydymas
                                    {% endif %}
                                </th>
                                <th>                    {% if app.user.kalba == "EN" %}
                                        Complaints
                                    {% else %}
                                        Nusiskundimai
                                    {% endif %}</th>
                                <th>                    {% if app.user.kalba == "EN" %}
                                        Age
                                    {% else %}
                                        Amžius
                                    {% endif %}</th>
                                <th>                    {% if app.user.kalba == "EN" %}
                                        Registration date
                                    {% else %}
                                        Registracijos data
                                    {% endif %}</th>
                                <th>                    {% if app.user.kalba == "EN" %}
                                        Responsible
                                    {% else %}
                                        Atsakingas
                                    {% endif %}</th>
                                <th>                    {% if app.user.kalba == "EN" %}
                                        Queue
                                    {% else %}
                                        Eilė
                                    {% endif %}</th>
                                <th>                    {% if app.user.kalba == "EN" %}
                                        Languages
                                    {% else %}
                                        Kalbos
                                    {% endif %}</th>
                                <th>                    {% if app.user.kalba == "EN" %}
                                        Actions
                                    {% else %}
                                        Veiksmai
                                    {% endif %}</th>
                            </tr>
                            </thead>
                            <tbody id="myTable">
                            {% for pacientai in pacientais %}
                                <tr>

                                    <td>
                                        {% if app.user.kalba == "EN" %}
                                            {{ pacientai.gydymas|trans }}
                                        {% else %}
                                            {{ pacientai.gydymas }}
                                        {% endif %}
                                    </td>
                                    <td>{{ pacientai.nusiskundimai }}</td>
                                    <td>
                                        {% if app.user.kalba == "EN" %}
                                            {{ pacientai.amzius|trans({'%name%': 'Fabien'}, 'app', "en") }}
                                        {% else %}
                                            {{ pacientai.amzius }}
                                        {% endif %}
                                    </td>
                                    <td>{{ pacientai.regData.format("Y-m-d") }}</td>
                                    <td>{{ pacientai.atsakingas }}</td>
                                    <td>
                                        {% for pac in pacientai.getEiles() %}
                                            {{ pac.getUser() }}<br>
                                        {% endfor %}
                                    </td>

                                    <td>
                                        {{ (pacientai.kalbos ? pacientai.kalbos|join(', ') : '')}}
                                    </td>

                                    <td>
                                        {% if pacientai.getAtsakingas() != null %}
                                            {% if pacientai.getAtsakingas().getId() == app.user.Id and app.user.role != "SUPER" %}
                                                <a style="color: blue" href="{{ path('pacientai_show', {'id': pacientai.id}) }}">
                                                    {% if app.user.kalba == "EN" %}
                                                        Show
                                                    {% else %}
                                                        Parodyti
                                                    {% endif %}</a>
                                            {% endif %}
                                        {% endif %}

                                        {% if app.user.role == "SUPER"%}
                                            <a style="color: blue" href="{{ path('pacientai_show', {'id': pacientai.id}) }}">Parodyti</a>
                                        {% endif %}

                                        {% if pacientai.getAtsakingas() == null %}
                                            {% if app.user.role != "NAUJAS" %}
                                                <a style="color: darkgreen" href="{{ path('pacientas_choose', {'id': pacientai.id}) }}">
                                                    {% if app.user.kalba == "EN" %}
                                                        Choose
                                                    {% else %}
                                                        Pasirinkti
                                                    {% endif %}</a>
                                            {% endif %}
                                        {% endif %}


                                        {% if pacientai.getAtsakingas != null %}
                                            {% if pacientai.getAtsakingas().getId() == app.user.Id or app.user.role == "SUPER" %}
                                                <a style="color: darkred" href="{{ path('pacientas_cancel', {'id': pacientai.id}) }}">
                                                    {% if app.user.kalba == "EN" %}
                                                        Cancel
                                                    {% else %}
                                                        Atšaukti
                                                    {% endif %}</a>
                                            {% endif %}
                                        {% endif %}

                                        {% if pacientai.getAtsakingas() != null %}
                                            {% if pacientai.getAtsakingas().getId() != app.user.Id %}
                                                <a style="color: blue" href="{{ path('pacientas_queue', {'id': pacientai.id}) }}">
                                                    {% if app.user.kalba == "EN" %}
                                                        Stand in queue
                                                    {% else %}
                                                        Stoti į eilę
                                                    {% endif %}</a>
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="16">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        {% if app.user.role == "SUPER" %}
                            <br>
                            <h2>Sutarti pacientai:</h2>
                            <table class="table" id="customers">
                                <thead>
                                <tr>
                                    <th>
                                        {% if app.user.kalba == "EN" %}
                                            Treatment
                                        {% else %}
                                            Gydymas
                                        {% endif %}
                                    </th>
                                    <th>                    {% if app.user.kalba == "EN" %}
                                            Complaints
                                        {% else %}
                                            Nusiskundimai
                                        {% endif %}</th>
                                    <th>                    {% if app.user.kalba == "EN" %}
                                            Age
                                        {% else %}
                                            Amžius
                                        {% endif %}</th>
                                    <th>                    {% if app.user.kalba == "EN" %}
                                            Registration date
                                        {% else %}
                                            Registracijos data
                                        {% endif %}</th>
                                    <th>                    {% if app.user.kalba == "EN" %}
                                            Responsible
                                        {% else %}
                                            Atsakingas
                                        {% endif %}</th>
                                    <th>                    {% if app.user.kalba == "EN" %}
                                            Queue
                                        {% else %}
                                            Eilė
                                        {% endif %}</th>
                                    <th>                    {% if app.user.kalba == "EN" %}
                                            Actions
                                        {% else %}
                                            Veiksmai
                                        {% endif %}</th>
                                </tr>
                                </thead>
                                <tbody id="myTable">
                                {% for sutart in sutarti %}
                                    <tr>

                                        <td>
                                            {% if app.user.kalba == "EN" %}
                                                {{ sutart.gydymas|trans }}
                                            {% else %}
                                                {{ sutart.gydymas }}
                                            {% endif %}
                                        </td>
                                        <td>{{ sutart.nusiskundimai }}</td>
                                        <td>
                                            {% if app.user.kalba == "EN" %}
                                                {{ sutart.amzius|trans }}
                                            {% else %}
                                                {{ sutart.amzius }}
                                            {% endif %}
                                        </td>
                                        <td>{{ sutart.regData.format("Y-m-d") }}</td>
                                        <td>{{ sutart.atsakingas }}</td>
                                        <td>
                                            {% for pac in sutart.getEiles() %}
                                                {{ pac.getUser() }}<br>
                                            {% endfor %}
                                        </td>

                                        <td>
                                            {% if sutart.getAtsakingas() != null %}
                                                {% if sutart.getAtsakingas().getId() == app.user.Id and app.user.role!="SUPER" %}
                                                    <a style="color: blue" href="{{ path('pacientai_show', {'id': sutart.id}) }}">
                                                        {% if app.user.kalba == "EN" %}
                                                            Show
                                                        {% else %}
                                                            Parodyti
                                                        {% endif %}</a>
                                                {% endif %}
                                            {% endif %}

                                            {% if app.user.role == "SUPER"%}
                                                <a style="color: blue" href="{{ path('pacientai_show', {'id': sutart.id}) }}">Parodyti</a>
                                            {% endif %}


                                            {% if sutart.getAtsakingas != null %}
                                                {% if sutart.getAtsakingas().getId() == app.user.Id or app.user.role == "SUPER" %}
                                                    <a style="color: darkred" href="{{ path('pacientas_cancel', {'id': sutart.id}) }}">
                                                        {% if app.user.kalba == "EN" %}
                                                            Cancel
                                                        {% else %}
                                                            Atšaukti
                                                        {% endif %}</a>
                                                {% endif %}
                                            {% endif %}

                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="16">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                </div>
            </div>
            <br>
        </div>
        {{ include('apacia.html.twig') }}
    </div>




    <br>


{% endblock %}
