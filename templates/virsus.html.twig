{% extends 'base.html.twig' %}

{% block title %}Virsus{% endblock %}

{% block body %}

    <script src="https://unpkg.com/@popperjs/core@2"></script>

    <div class="row">
        <div class="col-md-12">
            <div style="display:flex;justify-content:center;align-items:center;">
                <a href="{{ path('main') }}">
                    <img style="width: 100%" alt="" src="https://i.ibb.co/fQWjMyS/banner-bigger.jpg" />
                </a>


            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="navbar-toggler-icon"></span>
                </button> <a class="navbar-brand" href="{{ path('main') }}">Sveiki dantukai</a>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.facebook.com/STODAS/">SOA Facebook</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.facebook.com/sveikidantukai.lt/">SD Facebook</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('atsiliepimai_new') }}">Palikti atsiliepimą</a>
                        </li>
                        {% if app.user == null %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('reg_vilnius') }}">Reg. Vilniuje</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('pacientai_new') }}">Reg. Kaune</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('klinikiniai_index') }}">Klinikiniai tyrimai</a>
                            </li>
                        {% endif %}
                    </ul>
                    <ul class="navbar-nav ml-md-auto">

                            {% if app.user %}
                                <div>
                                    {% if app.user.kalba == "LT" %}
                                        <p>Esate prisijungęs kaip {{ app.user.username }}, <a href="{{ path('app_logout') }}">Atsijungti</a>.</p>
                                        {% if app.user.yraNauju %}
                                            Turite naujų pacientų. Prašome patikrinti "Mano pacientai".
                                        {% endif %}
                                        {% if app.user.role == "NAUJAS" %}
                                            Esate nepatvirtintas.
                                        {% endif %}
                                    {% endif %}
                                    {% if app.user.kalba == "EN" %}
                                    <p>You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>.</p>
                                        {% if app.user.yraNauju %}
                                            You've got new clients. Please check "My patients".
                                        {% endif %}
                                        {% if app.user.role == "NAUJAS" %}
                                            <p>You are unconfirmed.</p>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            {% endif %}
                            &nbsp;
                        </li>
                    </ul>
                    {% if app.user %}
                    {% if app.user.role != "NAUJAS" %}
                    <ul class="navbar-nav ml-md-auto">

                        <li class="nav-item dropdown">
                            {% if app.user.kalba == "LT" %}
                                <a class="nav-link dropdown-toggle" href="{{ path('main') }}" id="navbarDropdownMenuLink" data-toggle="dropdown">Valdymas</a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    {% if app.user.role == "ADMIN" or app.user.role == "SUPER" %}
                                        <a class="dropdown-item" href="{{ path('atsiliepimai_index') }}">Atsiliepimai</a>
                                        <div class="dropdown-divider"> </div>
                                    {% endif %}
                                    {% if app.user.role == "ADMIN" or app.user.role == "SUPER" %}
                                        <a class="dropdown-item" href="{{ path('user_index') }}">Nepatvirtinti vartotojai</a>
                                    {% endif %}
                                    {% if app.user.role == "SUPER" %}
                                        <a class="dropdown-item" href="{{ path('user_patvirtinti') }}">Patvirtinti vartotojai</a>
                                        <a class="dropdown-item" href="{{ path('user_adminai') }}">Administratoriai</a>

                                    {% endif %}
                                    {% if app.user.role == "ADMIN" or app.user.role == "SUPER" %}
                                        <div class="dropdown-divider"> </div>
                                    {% endif %}
                                    <a class="dropdown-item" href="{{ path('klinikiniai_index') }}">Klinikiniai tyrimai</a>
                                    <a class="dropdown-item" href="{{ path('pacientai_index') }}">Pacientų valdymas</a>
                                    <div class="dropdown-divider">
                                    </div> <a class="dropdown-item" href="{{ path('pacientai_index_mine') }}">Mano pacientai</a>
                                </div>
                            {% endif %}
                            {% if app.user.kalba == "EN" %}
                                <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">Management</a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="{{ path('klinikiniai_index') }}">Clinical trials</a>
                                    <a class="dropdown-item" href="{{ path('pacientai_index') }}">Patient management</a>
                                    <div class="dropdown-divider">
                                    </div> <a class="dropdown-item" href="{{ path('pacientai_index_mine') }}">My patients</a>
                                </div>
                            {% endif %}


                        </li>
                    </ul>
                    {% endif %}
                    {% endif %}
                </div>
            </nav>
        </div>
    </div>
{% endblock %}

